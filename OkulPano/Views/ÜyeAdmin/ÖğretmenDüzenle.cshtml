@model OkulPano.Models.Sınıflar.Öğretmen

@{
    ViewBag.Title = "ÖğretmenDüzenle";
    Layout = "~/Views/_ÜyeAdminLayout.cshtml";
}

<h2>ÖğretmenDüzenle</h2>
<form class="form-group" method="post">
    <h3>Ad</h3>
    @Html.TextBoxFor(x => x.Ad,new { @id = "OkulAd", @placeholder = "Okul Adı", @class = "form-control", required = "required" })
   <br>
    <button class="btn btn-success">Kaydet</button>
</form>
